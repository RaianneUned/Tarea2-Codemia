@model Tarea2.Models.ProjectEditViewModel

@section HeadContent {
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />
}

<section class="flex flex-col min-h-screen bg-background-light text-gray-800">
    <div class="container mx-auto px-6 py-8 max-w-3xl">
        <div class="mb-8">
            <h2 class="text-3xl font-bold text-gray-900">Editar Proyecto</h2>
            <p class="mt-2 text-gray-600">Actualice los datos visibles en su catálogo personal.</p>
        </div>
        <div class="mb-6">
            @if (TempData["StatusMessage"] is string message && !string.IsNullOrWhiteSpace(message))
            {
                <div class="rounded-lg border border-green-200 bg-green-50 px-4 py-3 text-sm text-green-700">@message</div>
            }
        </div>
        <form asp-action="Edit" method="post" class="space-y-6">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Slug" />
            <div>
                <label asp-for="Title" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="Title" class="form-input w-full rounded-lg border-gray-300 bg-background-light focus:ring-primary focus:border-primary" />
                <span asp-validation-for="Title" class="text-sm text-red-600"></span>
            </div>
            <div>
                <label asp-for="Description" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <textarea asp-for="Description" rows="4" class="form-textarea w-full rounded-lg border-gray-300 bg-background-light focus:ring-primary focus:border-primary"></textarea>
                <span asp-validation-for="Description" class="text-sm text-red-600"></span>
            </div>
            <div>
                <label asp-for="Overview" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <textarea asp-for="Overview" rows="4" class="form-textarea w-full rounded-lg border-gray-300 bg-background-light focus:ring-primary focus:border-primary" placeholder="Puedes dejarlo vacío para reutilizar la descripción breve."></textarea>
                <span asp-validation-for="Overview" class="text-sm text-red-600"></span>
            </div>
            <div>
                <label asp-for="Technology" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="Technology" class="form-input w-full rounded-lg border-gray-300 bg-background-light focus:ring-primary focus:border-primary" />
                <span asp-validation-for="Technology" class="text-sm text-red-600"></span>
            </div>
            <div class="flex items-center gap-4 text-sm text-gray-600">
                <span><strong>Calificación actual:</strong> @Model.Rating.ToString("0.0")</span>
                <span><strong>Reseñas:</strong> @Model.ReviewCount</span>
            </div>
            <div class="flex items-center justify-between pt-6">
                <a asp-action="Mine" class="inline-flex items-center gap-2 rounded-lg border border-gray-300 px-4 py-2 text-sm font-semibold text-gray-700 hover:bg-gray-100">
                    <span class="material-symbols-outlined text-base">arrow_back</span>
                    Regresar
                </a>
                <button type="submit" class="inline-flex items-center gap-2 rounded-lg bg-primary px-6 py-2 text-sm font-semibold text-white hover:bg-primary/90 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary">
                    <span class="material-symbols-outlined text-base">save</span>
                    Guardar cambios
                </button>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
