@inject Tarea2.Services.IUserSessionService UserSession
@{
    var suppressHeader = ViewData["SuppressLayoutHeader"] as bool? ?? false;
    var useFullWidthLayout = ViewData["UseFullWidthLayout"] as bool? ?? false;
    var bodyClass = ViewData["BodyClass"] as string ?? string.Empty;
    var context = Context;
    var isAuthenticated = UserSession.IsAuthenticated(context);
    var currentUsername = isAuthenticated ? UserSession.GetCurrentUsername(context) : null;
    var currentDisplayName = isAuthenticated ? UserSession.GetCurrentDisplayName(context) : null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CodeCritique</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <script>
        tailwind = window.tailwind || {};
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: "#135bec",
                        "background-light": "#f6f6f8"
                    },
                    fontFamily: {
                        display: ["Inter", "system-ui", "-apple-system", "BlinkMacSystemFont", "Segoe UI", "sans-serif"]
                    },
                    borderRadius: {
                        DEFAULT: "0.25rem",
                        lg: "0.5rem",
                        xl: "0.75rem",
                        full: "9999px"
                    }
                }
            }
        };
    </script>
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700;900&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Tarea2.styles.css" asp-append-version="true" />
    <style>
        .material-symbols-outlined {
            font-variation-settings:
            'FILL' 0,
            'wght' 400,
            'GRAD' 0,
            'opsz' 24
        }
    </style>
    @RenderSection("HeadContent", required: false)
</head>
<body class="@bodyClass">
    @if (!suppressHeader)
    {
        <header>
            <nav class="navbar navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container-fluid d-flex flex-wrap align-items-center gap-3">
                    <a class="navbar-brand d-flex align-items-center gap-2" asp-area="" asp-controller="Home" asp-action="Index">
                        <span class="d-inline-flex align-items-center justify-content-center" style="width:24px;height:24px;color:#135bec;">
                            <svg viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path d="M12 2L21 11L12 20L3 11L12 2Z" />
                            </svg>
                        </span>
                        <span>Codemia</span>
                    </a>
                    <ul class="navbar-nav flex-row gap-3 me-auto">
                        <li class="nav-item">
                            <a class="nav-link text-dark p-0" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>
                        @if (isAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark p-0" asp-controller="Projects" asp-action="Mine">Mis Proyectos</a>
                            </li>
                        }
                    </ul>
                    <div class="d-flex align-items-center ms-auto">
                        @if (isAuthenticated)
                        {
                            <div class="d-flex align-items-center gap-2">
                                <span class="text-muted small">@currentDisplayName</span>
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-outline-danger btn-sm">Salir</button>
                                </form>
                            </div>
                        }
                        else
                        {
                            <button type="button" class="btn login-circle js-login-trigger" aria-haspopup="dialog" aria-controls="loginOverlay" aria-expanded="false">
                                <span class="visually-hidden">Abrir panel de inicio de sesión</span>
                                <span class="login-circle-label">Login</span>
                            </button>
                        }
                    </div>
                </div>
            </nav>
        </header>
    }
    @if (useFullWidthLayout)
    {
        <main role="main" class="layout-main">
            @RenderBody()
        </main>
    }
    else
    {
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    }

    <footer class="border-top footer text-muted mt-5">
        <div class="bg-white">
            <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-8 text-center text-sm text-gray-500">
                <p class="mb-0">© 2025 Codemia. Todos los derechos reservados.</p>
            </div>
        </div>
    </footer>
    <div id="loginOverlay" class="login-overlay" role="dialog" aria-modal="true" aria-labelledby="loginOverlayTitle" aria-hidden="true">
        <div class="login-overlay-backdrop"></div>
        <div class="login-overlay-panel">
            <button type="button" class="btn close-overlay" id="loginOverlayClose" aria-label="Cerrar inicio de sesión">&times;</button>
            <h2 id="loginOverlayTitle" class="overlay-title">Iniciar sesión</h2>
            <form id="loginForm" class="overlay-form" data-login-url="@(Url.Action("Login", "Account") ?? string.Empty)">
                <div class="mb-3">
                    <label for="loginIdentifier" class="form-label">Usuario</label>
                    <input type="text" class="form-control" id="loginIdentifier" name="identifier" autocomplete="username" />
                </div>
                <div class="mb-4">
                    <label for="loginPassword" class="form-label">Contraseña</label>
                    <input type="password" class="form-control" id="loginPassword" name="password" autocomplete="current-password" />
                </div>
                <button type="submit" class="btn btn-primary w-100">Ingresar</button>
                <div id="loginFormFeedback" class="alert alert-info mt-3 d-none" role="status">
                    Funcionalidad de autenticación en construcción.
                </div>
                <p class="mt-3 text-center text-muted small">
                    ¿No tienes cuenta? <a class="text-primary text-decoration-none" asp-controller="Account" asp-action="SignUp">Crea una aquí</a>.
                </p>
            </form>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        (function () {
            document.addEventListener('DOMContentLoaded', function () {
                const logoutForms = document.querySelectorAll('form[asp-controller="Account"][asp-action="Logout"], form[action*="/Account/Logout"]');
                if (!logoutForms.length) {
                    return;
                }

                logoutForms.forEach(function (form) {
                    form.addEventListener('submit', function () {
                        try {
                            window.sessionStorage.removeItem('recentProjects');
                            window.localStorage.removeItem('recentProjects');
                        } catch (err) {
                            console.warn('No se pudieron limpiar los proyectos recientes del almacenamiento del navegador.', err);
                        }
                    });
                });
            });
        })();
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
